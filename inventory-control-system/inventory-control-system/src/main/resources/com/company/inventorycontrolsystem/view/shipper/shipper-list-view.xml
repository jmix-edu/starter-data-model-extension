<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://shipperListView.title"
      focusComponent="shippersDataGrid">
    <data>
        <collection id="shippersDc"
                    class="com.company.inventorycontrolsystem.entity.Shipper">
            <fetchPlan extends="_base"/>
            <loader id="shippersDl" readOnly="true">
                <query>
                    <![CDATA[select e from ics_Shipper e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="shippersDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="shippersDataGrid.create"/>
            <button id="editBtn" action="shippersDataGrid.edit"/>
            <button id="removeBtn" action="shippersDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="shippersDl"/>
        </hbox>
        <dataGrid id="shippersDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="shippersDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
